# ArduPilot MCP Server Configuration
# Copy this file to .env and modify the values as needed

# === ArduPilot Connection Settings ===
ARDUPILOT_HOST=127.0.0.1
ARDUPILOT_PORT=14552
ARDUPILOT_PROTOCOL=udp

# Alternative connection settings for remote ArduPilot
# ARDUPILOT_HOST=192.168.1.100
# ARDUPILOT_PORT=14552

# === Server Settings ===
NODE_ENV=development
LOG_LEVEL=info

# === MCP Server Settings ===
MCP_SERVER_NAME="ArduPilot Controller"
MCP_SERVER_VERSION="1.0.0"

# === Connection Parameters ===
# Source system ID for MAVLink messages
SOURCE_SYSTEM=1
SOURCE_COMPONENT=90

# Connection timeout (milliseconds)
CONNECTION_TIMEOUT=10000

# Auto-reconnect settings
AUTO_RECONNECT=true
MAX_RECONNECT_ATTEMPTS=5
RECONNECT_INTERVAL=5000

# === Development Settings ===
# Enable debug logging
# DEBUG=ardupilot:*

# Enable TypeScript source maps in production
# NODE_OPTIONS="--enable-source-maps"

# === Docker Settings ===
# When running in Docker, these may need to be adjusted
# ARDUPILOT_HOST=host.docker.internal  # For Docker Desktop on Windows/Mac
# ARDUPILOT_HOST=172.17.0.1            # For Docker on Linux

# === Security Settings ===
# Restrict which systems can send commands (comma-separated list)
# ALLOWED_SYSTEMS=1,2,3

# Enable command validation
VALIDATE_COMMANDS=true

# === Logging Settings ===
# Log file path (optional)
# LOG_FILE=/var/log/ardupilot-mcp-server.log

# Maximum log file size
# LOG_MAX_SIZE=10MB

# Number of log files to retain
# LOG_MAX_FILES=5